<Window x:Class="ClockbusterApps.Views.TimeclockViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Application Usage Data" Height="600" Width="950"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0" 
                  x:Name="DataGridLogs"
                  SelectionMode="Extended"
                  SelectionChanged="DataGridLogs_SelectionChanged"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="15"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="#F8F9FA"
                  RowHeight="32"
                  CanUserSortColumns="True"
                  FontSize="13">

            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Add application to ignore list" Click="CtxAddToIgnore_Click"/>
                    <Separator/>
                    <MenuItem Header="Delete Selected" Click="DeleteSelected_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Session ID" Binding="{Binding Id}" Width="110"/>
                <DataGridTextColumn Header="Application" Binding="{Binding ApplicationName}" Width="*" MinWidth="150" FontWeight="SemiBold"/>
                <DataGridTextColumn Header="Start Time" Binding="{Binding StartTimeStr}" Width="150"/>
                <DataGridTextColumn Header="End Time" Binding="{Binding EndTimeStr}" Width="150"/>
                <DataGridTextColumn Header="Duration (Min)" Binding="{Binding DurationMinutes}" Width="120"/>
            </DataGrid.Columns>

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#E9ECEF"/>
                    <Setter Property="Foreground" Value="#2C3E50"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    <Setter Property="BorderBrush" Value="#DEE2E6"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.InputBindings>
                <KeyBinding Key="A" Modifiers="Control" Command="{Binding SelectAllCommand}"/>
            </DataGrid.InputBindings>
        </DataGrid>

        <StatusBar Grid.Row="1" Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="0,1,0,0">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <Button Content="Refresh" Click="Refresh_Click" Width="100" Height="32" Margin="0,0,10,0" Background="#3498DB" Foreground="White" BorderThickness="0" Cursor="Hand"/>

                    <Button x:Name="BtnDelete" 
                        Content="Delete All" 
                        Click="Delete_Click" 
                        Width="150" Height="32" 
                        Background="#E74C3C" Foreground="White" BorderThickness="0" Cursor="Hand"/>

                    <TextBlock x:Name="StatusTextViewer" 
                               VerticalAlignment="Center" 
                               Margin="15,0,0,0" 
                               Foreground="#2C3E50"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>