<Window x:Class="ClockbusterApps.Views.OptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Options" 
        Height="250" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="#F0F0F0">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Application Options" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Foreground="#1F1F1F"/>
            <TextBlock Text="Configure monitoring behavior" 
                       FontSize="11" 
                       Foreground="#606060"
                       Margin="0,2,0,0"/>
        </StackPanel>

        <!-- Options Content -->
        <GroupBox Grid.Row="1" 
                  Header="Monitoring Behavior" 
                  Padding="10"
                  Background="White"
                  BorderBrush="#E5E5E5">
            <StackPanel>
                <CheckBox x:Name="ChkTrackExisting"
                          Content="Track already-running applications when monitoring starts"
                          FontSize="11"
                          VerticalAlignment="Center"
                          Margin="0,5,0,0"/>

                <TextBlock Text="When enabled, applications that are already open will be tracked immediately when you start monitoring. When disabled, only newly launched applications will be tracked."
                           TextWrapping="Wrap"
                           FontSize="10"
                           Foreground="#606060"
                           Margin="20,8,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- Button Panel -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button x:Name="BtnOK"
                    Content="OK"
                    Width="75"
                    Height="24"
                    Margin="0,0,6,0"
                    IsDefault="True"
                    Click="BtnOK_Click"
                    FontSize="11"/>
            <Button x:Name="BtnCancel"
                    Content="Cancel"
                    Width="75"
                    Height="24"
                    IsCancel="True"
                    Click="BtnCancel_Click"
                    FontSize="11"/>
        </StackPanel>
    </Grid>
</Window>