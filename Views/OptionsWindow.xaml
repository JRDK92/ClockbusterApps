<Window x:Class="ClockbusterApps.Views.OptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Options" 
        Height="300" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="#F0F0F0">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Application Options" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Foreground="#1F1F1F"/>
        </StackPanel>

        <TabControl Grid.Row="1" Background="White" BorderBrush="#D0D0D0">

            <TabItem Header="Monitoring">
                <Grid Margin="10">
                    <StackPanel>
                        <TextBlock Text="Monitoring Behavior" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <CheckBox x:Name="ChkTrackExisting"
                                  Content="Track already-running applications when monitoring starts"
                                  FontSize="11"
                                  VerticalAlignment="Center"
                                  Margin="0,5,0,0"/>

                        <TextBlock Text="When enabled, applications that are already open will be tracked immediately when you start monitoring.&#x0a;When disabled, only newly launched applications will be tracked."
                                   TextWrapping="Wrap"
                                   FontSize="10"
                                   Foreground="#606060"
                                   Margin="20,5,0,0"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Ignored Processes">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Applications added here will not be tracked." 
                               FontSize="11" Foreground="#606060" Margin="0,0,0,8"/>

                    <Grid Grid.Row="1" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="TxtProcessName" Grid.Column="0" Height="23" VerticalContentAlignment="Center" Margin="0,0,5,0"/>
                        <Button x:Name="BtnAddProcess" Grid.Column="1" Content="Add" Width="60" Height="23" Click="BtnAddProcess_Click"/>
                    </Grid>

                    <ListBox x:Name="LstIgnoredProcesses" Grid.Row="2" BorderBrush="#E5E5E5" Margin="0,0,0,8"/>

                    <Button Grid.Row="3" x:Name="BtnRemoveProcess" Content="Remove Selected" HorizontalAlignment="Right" Width="110" Height="23" Click="BtnRemoveProcess_Click"/>
                </Grid>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button x:Name="BtnOK"
                    Content="OK"
                    Width="75"
                    Height="24"
                    Margin="0,0,6,0"
                    IsDefault="True"
                    Click="BtnOK_Click"
                    FontSize="11"/>
            <Button x:Name="BtnCancel"
                    Content="Cancel"
                    Width="75"
                    Height="24"
                    IsCancel="True"
                    Click="BtnCancel_Click"
                    FontSize="11"/>
        </StackPanel>
    </Grid>
</Window>