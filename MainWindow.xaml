<Window x:Class="ClockbusterApps.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Clockbuster-Apps" Height="300" Width="450"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <Menu DockPanel.Dock="Top" Background="White" BorderBrush="#EEEEEE" BorderThickness="0,0,0,1">
            <MenuItem Header="File">
                <MenuItem Header="Exit" Click="Exit_Click" />
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Timeclock Data" Click="ViewData_Click" />
            </MenuItem>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Status: Idle" />
            </StatusBarItem>
        </StatusBar>

        <Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Clockbuster Control Panel" 
                           FontSize="18" FontWeight="SemiBold" 
                           Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <Button x:Name="BtnToggleLogging" 
                        Content="Start Logging" 
                        Width="150" Height="50"
                        Click="BtnToggleLogging_Click"
                        Background="#0078D4" Foreground="White" 
                        FontSize="14" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>